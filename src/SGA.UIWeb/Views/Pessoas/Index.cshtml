@model List<List<SGA.ApplicationCore.ViewModel.ViewPessoa>>

@{
    ViewData["Title"] = "Index";
}

<h1>Agenda de Aniversário</h1>
<hr />
<h2>Aniversariantes do Dia!!!</h2>
<div class="list-group">
    @foreach (var amigo in Model[0])
    {
        <a asp-action="Details" asp-route-id="@amigo.Id" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@amigo.Nome @amigo.Sobrenome</h5>
                <small class="text-muted">Parabéns</small>
            </div>
            <p class="mb-1">@amigo.Parabens</p>
        </a>
    }
</div>
<br />
<h2>Próximos Aniversariantes</h2>
<div class="list-group">
    @foreach (var amigo in Model[1])
    {
        <a asp-action="Details" asp-route-id="@amigo.Id" class="list-group-item list-group-item-action flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@amigo.Nome @amigo.Sobrenome</h5>
                <small class="text-muted">@amigo.Nascimento.ToShortDateString()</small>
            </div>
            <p class="mb-1">Faltam @amigo.DiasAteProximoAniversario dias para o próximo aniversário</p>


        </a>
    }
</div>
